{
  "name": "authentication-server",
  "version": "1.0.0",
  "description": "Authentication server prototype",
  "main": "server.js",
  "scripts": {
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "lint": "concurrently \"tsc:w\" \"nodemon server.js\"",
    
    "server": "set NODE_ENV=development&& nodemon server.js -l",
    "lite-server": "lite-server -c lite-server.config.json",
    
    "install:prod": "npm install --only=production",
    
    "build-client:dev": "cd client && ng build --output-path ../public --watch",
    "build-client": "cd client && ng build --output-path ../public -prod",
    
    "start:prod": "npm run build-client --output-path ../public -prod && node server.js",
    "start:watch": "concurrently \"npm run build-client:dev\" \"lite-server -c lite-server.config.json\"",    
    "start": "concurrently \"npm run build-client:dev\" \"npm run server\""
  },
  "nodemonConfig": {
    "ignore": [
      "client/*",
      ".vscode/*"
    ],
    "delay": "2500"
  },
  "keywords": [
    "Authentication",
    "server",
    "node",
    "prototype"
  ],
  "author": "Jiri Podlipny",
  "license": "ISC",
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "chalk": "^2.3.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "mongoose": "^4.13.4",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-local": "^1.0.0",
    "string-template": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "typescript": "^2.6.1"
  }
}
